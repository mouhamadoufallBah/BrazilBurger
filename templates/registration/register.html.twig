{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
<div class="container ">
    <div class="card my-container mt-5 col-sm-8 offset-sm-2 ">
        <div class="card-body ">
            <p class="card-text ">
            <h1 class="h3 mb-3 font-weight-normal text-center">S'inscrire</h1>
                {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.nomComplet) }}
                    {{ form_row(registrationForm.telephone) }}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe'
                    }) }}
                    {{ form_row(registrationForm.agreeTerms, {
                        label: "Accepter les condition d'utulisation"}) }}

                    <button type="submit" class="btn btn-primary">S'inscrire</button>
                {{ form_end(registrationForm) }}
            </p>
        </div>
    </div>
</div>
{% endblock %}
