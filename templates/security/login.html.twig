{% extends '/security/connexion.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <div class="container ">
        <div class="card my-container mt-5 col-sm-8 offset-sm-2 ">
            <div class="card-body ">
                <p class="card-text ">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal text-center">Se connecter</h1>
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email"  autofocus>
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" >

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                    <button class="btn btn-lg btn-primary mt-2 float-right" type="submit">
                        Connexion
                    </button>
                </form>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
